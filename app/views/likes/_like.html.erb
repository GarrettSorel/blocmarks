  <% if policy(Like.new).create? %>
     <% if like = current_user.liked(bookmark) %>
       <%= link_to [bookmark, like], class: 'waves-effect waves-heavy btn red', method: :delete do %>
         <i class="small material-icons left">thumb_down</i>&nbsp; Unlike
       <% end %>
     <% else %>
       <%= link_to [bookmark, Like.new], class: 'waves-effect waves-heavy btn', method: :post do %>
         <i class="small material-icons left">thumb_up</i>&nbsp; Like
       <% end %>
     <% end %>
<% end %>