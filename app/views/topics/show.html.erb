<div class="container center-align">
  <h1><%= @topic.title %></h1>

  <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
</div>

<div class="container content-padding">
  <div class="row">
    <% @topic.bookmarks.each do |bookmark| %>
        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-image">
              <img src="http://buninyongps.vic.edu.au/wp-content/uploads/2013/12/Gallery-Link-190x190.jpg">
            </div>
            <div class="card-content">
              <p>This is a sample bookmark. This is where a description should go.</p>
            </div>
            <div class="card-action left-align">
              <%= link_to bookmark.url, topic_bookmark_path(bookmark.topic, bookmark)  %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>