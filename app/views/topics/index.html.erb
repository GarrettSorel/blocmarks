<div class="container center-align">
  <h1>Topics</h1>
  <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>

  <div class="row">
    <% @topics.each do |topic| %>
      <div class="col s12 m6 l4">
      <h4>  
        <%= link_to topic.title, topic %>
      </h4>
      </div>
      <% end %>
  </div>
</div>