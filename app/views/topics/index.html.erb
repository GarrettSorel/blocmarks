<div class="container">
  <div class="col-md-12 text-center">
     <h1>Topics</h1>
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
  </div>
</div>
 
 <div class="row">
   <div class="col-md-8">
     <% @topics.each do |topic| %>
       <div class="container">
         <div class="row">
           <h4 class="media-heading">
             <%= link_to topic.title, topic %>
           </h4>
         </div>
       </div>
     <% end %>
   </div>
 </div>