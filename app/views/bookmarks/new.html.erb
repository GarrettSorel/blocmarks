<h1 class="text-center">Create Bookmark</h1>
 
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for [@topic, @bookmark] do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :url, class: 'form-control', placeholder: "Enter bookmark name" %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>