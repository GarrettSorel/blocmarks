
<h1 class="text-center"><%= @bookmark.url %></h1>
<div class="text-center">
  <% if policy(@bookmark).edit? %>
    <%= link_to "Edit Bookmark", edit_topic_bookmark_path, class: 'btn btn-success' %>
  <% end %>
  <% if policy(@bookmark).edit? %>
    <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
  <% end %>
  
  <% if policy(Like.new).create? %>
  <div>
    <% if like = current_user.liked(@bookmark) %>
      <%= link_to [@bookmark, like], class: 'btn btn-danger', method: :delete do %>
        <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unlike
      <% end %>
    <% else %>
      <%= link_to [@bookmark, Like.new], class: 'btn btn-primary', method: :post do %>
        <i class="glyphicon glyphicon-star"> </i>&nbsp; Like
      <% end %>
    <% end %>
  </div>
<% end %>

</div>
