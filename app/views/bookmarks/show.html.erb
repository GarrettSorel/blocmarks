<div class="container center-align">

  <h1><%= @bookmark.url %></h1>

    <% if policy(@bookmark).edit? %>
      <%= link_to "Edit Bookmark", edit_topic_bookmark_path, class: 'btn btn-success' %>
    <% end %>
    <% if policy(@bookmark).edit? %>
      <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
    <% end %>
  
    <% if policy(Like.new).create? %>
      <% if like = current_user.liked(@bookmark) %>
        <%= link_to [@bookmark, like], class: 'waves-effect waves-heavy btn-large red', method: :delete do %>
          <i class="small material-icons left">thumb_down</i>&nbsp; Unlike
        <% end %>
      <% else %>
        <%= link_to [@bookmark, Like.new], class: 'waves-effect waves-heavy btn-large', method: :post do %>
          <i class="small material-icons left">thumb_up</i>&nbsp; Like
        <% end %>
      <% end %>
  <% end %>

</div>